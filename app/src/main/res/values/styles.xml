<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorBackgroundDark</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorSubText</item>
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowTheme</item>
        <item name="buttonStyle">@style/button</item>
        <item name="editTextStyle">@style/editText</item>
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>

    <style name="OverFlowTheme">
    <item name="android:src">@mipmap/ic_more</item>
    </style>


    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorText</item>
        <item name="colorPrimaryDark">@color/colorBackgroundDark</item>
        <item name="android:background">@drawable/bytton_style</item>
    </style>

    <style name="editText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorBackgroundDarkest</item>
        <item name="android:logo">@drawable/pmdb_logo_txtonly</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="android:title">nothing</item>
    </style>

</resources>
