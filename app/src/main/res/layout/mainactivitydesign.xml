<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackgroundDarkest">


        <EditText
            android:id="@+id/searchPhraseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:gravity="right"
            android:hint="@string/searchLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="@dimen/lookingGlassSize"
            android:layout_height="@dimen/lookingGlassSize"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/searchPhraseEditText"
            android:textSize="@dimen/mainButtonTextSize"
            android:background="@drawable/looking_glass"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchPhraseEditText"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchBar"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/mainLogoWidth"
                android:layout_height="50dp"
                android:src="@drawable/pmdb_logo_txtonly"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/lab1Button"
                android:layout_width="@dimen/labWorksButtonWidth"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mainButtonTextSize"
                android:text="@string/lab1ButtonText"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:id="@+id/searchEntryListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontalScrollView"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style"></ListView>

</RelativeLayout>